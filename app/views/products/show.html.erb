<div class="container product-show anchor">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <div class="visible-xs-block">
      <h2>
        <%= @product.name %>
      </h2>
    </div>
    <div class="col-sm-6 col-xs-12">
      <%= image_tag(@product.image_url, class: "img-responsive product-img") %>
    </div>
    <div class="col-sm-6 col-xs-12">
      <div class="hidden-xs">
        <h2>
          <%= @product.name %>
        </h2>
      </div>
     
      <div>
        <p>
          <strong>Description:</strong>
          <br>
          <%= @product.description %>
        </p>

        <p>
          <strong>Colour:</strong>
          <%= @product.colour %>
        </p>

        <p>
          <strong>Image url:</strong>
          <br>
	        <%= @product.image_url %>
        </p>
        <p>
          <strong>Price:</strong>
          <br>
          <%= number_to_currency(@product.price)%>
        </p>      </div>

      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back to Products Overview', products_path %>
    </div>

  </div><!-- end row -->
</div><!-- end .container .product-show -->
<div class="anchor"></div>
